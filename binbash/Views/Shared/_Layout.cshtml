<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bin/Bash</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="stylesheet" src="~/Content/Styles/Styles.css">
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:400,500,700&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>
</head>
<body class="mdc-bg-blue-grey-800">
    <nav class="navbar-fixed-top navbar-inverse mdc-bg-grey-900 mdc-text-grey-50">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#primary-navbar-collaspe" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img class="img img-brand" src="/images/logos/full-logo-light.svg" alt="Brand" />
                </a>
            </div>

            <div class="collapse navbar-collapse" id="primary-navbar-collaspe">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                    <li>@Html.ActionLink("Cart", "Cart", "Cart")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "null-container" : "") body-content">
        @RenderBody()
    </div>

    <footer class="footer-bottom mdc-bg-grey-900 mdc-text-grey-50">
        <p>
            &copy; @DateTime.Now.Year - Bin/Bash<span class="pull-right">
                @Html.ActionLink("Private Policy", "PrivatePolicy", "Home") |
                @Html.ActionLink("Terms And Conditions", "TermsAndConditions", "Home")|
                <a href="https://github.com/binbashProj/alpha-centauri">GitHub</a>
            </span>
        </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
